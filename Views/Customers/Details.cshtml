@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Phone</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>      
            
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Phone</td>
                <td>@Model.Id</td>
            </tr>
        
    </tbody>
</table>

    
